---
interface Props {
    title?: string;
    id?: string;
    img?: string;
}
const {title, id, img} = Astro.props;
---

<a class="hover:scale-105 hover:contrast-125 hover:shadow-2xl inline-block transition-all" href={`/${id}`}>
    <img 
        class="aspect-[389/500] w-full h-full rounded-lg object-cover max-w-full" 
        src={img} 
        alt={`Portada del libro ${title}`}
        style={`view-transition-name: book-${id}`}>
</a>